{
  "comments": {
    "blockComment": ["*", "%"]
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(beginn-benutze|schleife)\\b",
      "end": "^\\s*(ende-benutze|ende-schleife)\\b"
    }
  }
}
