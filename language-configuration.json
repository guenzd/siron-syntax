{
  "comments": {
    "lineComment": "*%",
    "blockComment": ["*/", "*/"]
  },
  "brackets": [
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(beginn-benutze|schleife)\\b",
      "end": "^\\s*(ende-benutze|ende-schleife)\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "(?i)^\\s*(beginn-benutze|schleife|falls|wenn)\\b.*$",
    "decreaseIndentPattern": "(?i)^\\s*(ende-benutze|ende-schleife|sonst)\\b.*$"
  }
}
